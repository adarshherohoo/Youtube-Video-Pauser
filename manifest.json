{
  "manifest_version": 3,
  "name": "YouTube Tab Pauser",
  "version": "1.0",
  "description": "Pause YouTube video when tab is switched and resume when tab is reopened.",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
